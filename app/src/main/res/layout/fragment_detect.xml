<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5"
    tools:context=".detectFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poultry Disease Detector"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/shield_logo"
        android:layout_marginTop="48dp"
        android:contentDescription="App logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detect poultry diseases by analyzing chicken droppings. Take a photo or select an image from your gallery."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/takePhotoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:textColor="@color/white"
        app:backgroundTint="@color/lime"
        app:icon="@drawable/ic_camera"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconTint="@color/white"
        android:padding="16dp" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/chooseGalleryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose from Gallery"
        android:textColor="@color/white"
        app:backgroundTint="@color/lime"
        app:icon="@drawable/ic_gallery"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconTint="@color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp" />


</LinearLayout>
