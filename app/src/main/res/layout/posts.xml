<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crdviewpost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#ebe9e4"
    app:cardElevation="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivUserAvatarposts"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/replysendername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivUserAvatarposts"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/ivUserAvatarposts"
            android:text="Sender name"
            android:textColor="#1F2937"
            android:textSize="16sp"
            android:textStyle="bold" />





        <TextView
            android:id="@+id/tvPostreply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivUserAvatarposts"
            android:layout_marginTop="12dp"
            android:text="reply"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#4B5563"
            android:textSize="14sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>