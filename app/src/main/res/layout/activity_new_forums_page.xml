<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newForumsPage">

    <TextView
        android:id="@+id/postpagetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Post"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/newposttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new post"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/postpagetitle"/>


    <EditText
        android:id="@+id/postquestionET"
        android:layout_marginStart="35dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_input"
        android:gravity="top|start"
        android:hint="add a post"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        android:layout_below="@id/newposttv"
        />

    <TextView
        android:id="@+id/Postcategorytv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/postquestionET"/>

    <EditText
        android:id="@+id/CategoryET"
        android:layout_marginStart="35dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_input"
        android:layout_marginEnd="10dp"
        android:gravity="top|start"
        android:hint="category"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        android:layout_below="@id/Postcategorytv"
        />


<Button
    android:id="@+id/sendPost"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:text="Send post"
    android:layout_marginTop="15dp"
    android:backgroundTint="@color/lime"
    android:layout_marginHorizontal="10dp"
    android:layout_below="@id/CategoryET"/>







</RelativeLayout>